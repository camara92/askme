{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}


	<ul>
		{% for question in questions %}
			<a href="{{ path('question_show', {id: question.id }) }}" class="daouda block d-flex flex-row mb-20 block-shadow ">
			{% include 'partials/rating.html.twig' with {rating: question.rating } %}
				<div class="flex-fill d-flex flex-column mb-20">

					<div>
						<div class="mb-20 question-content  pb-20">
							<h2 class="mb-20">{{question.title}}
							</h2>
							<p>
								{{question.content }}
							</p>
						</div>
						<div class="d-flex flex-row justify-content-between">
							<div class="d-flex flex-row align-items-center ">
                             <img class="mr-10 question-avatar avatar" src="https://randomuser.me/api/portraits/men/85.jpg" alt="image de l'auteur" />
                             <small>Demand√© par <span class="clickable "> davledev </span></small>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                            <i class="fa-sharp fa-regular fa-comment mr-10"></i>
                            <p> {{ question.nbrOfResponse }} </p>
                            </div>
						</div>
					</div>
				</div>
			</a>
		{% endfor %}
	</ul>
{% endblock %}
