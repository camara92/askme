{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}


	<ul>
		{% for question in questions %}
			<li class="daouda block d-flex flex-row mb-20 block-shadow ">
				<div class="d-flex flex-column mr-20 align-items-center">
                <i class="fa-sharp fa-solid fa-arrow-up {{ question.rating > 0 ? 'rating-up' : '' }}"></i>
                <p class=" text-small" {% if question.rating > 0  %} class='rating-up' {% elseif question.rating  < 0 %} class='rating-down' {% endif %} > {{
                    question.rating 
                }} </p>
                <i class="fa-sharp fa-solid fa-arrow-down {{ question.rating < 0 ? 'rating-down' : '' }}  "></i>
                </div>
				<div class="flex-fill d-flex flex-column mb-20">

					<div>
						<div class="mb-20 question-content  pb-20">
							<h3 class="mb-20">{{question.title}}
							</h3>
							<p>
								{{question.content }}
							</p>
						</div>
						<div class="d-flex flex-row justify-content-between">
							<div class="d-flex flex-row align-items-center ">
                             <img class="mr-10 question-avatar avatar" src="{{question.author.avatar}}" alt="image de l'auteur" />
                             <small>Demand√© par <span class="clickable "> {{question.author.name }} </span></small>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                            <i class="fa-sharp fa-regular fa-comment mr-10"></i>
                            <p> {{ question.nbrOfResponse }} </p>
                            </div>
						</div>
					</div>
				</div>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
