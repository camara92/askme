{% extends "base.html.twig" %}



{% block title %}Home - listes questions 
{% endblock %}

{% block body %}


	<ul>
		{% for question in listesQuestions %}
			<a href="{{ path('question_show', {id: question.id }) }}" class="daouda block d-flex flex-row mb-20 block-shadow ">
				<div class="d-flex flex-column mr-20 align-items-center">
                <i class="fa-sharp fa-solid fa-arrow-up {{ question.rating > 0 ? 'rating-up' : '' }}"></i>
                <p class=" text-small {{ question.rating > 0 ? 'rating-up' : question.rating < 0 ? 'rating-down' : ''  }} " {% if question.rating > 0  %} class='rating-up' {% elseif question.rating  < 0 %} class='rating-down' {% endif %} > {{
                    question.rating 
                }} </p>
                <i class="fa-sharp fa-solid fa-arrow-down {{ question.rating < 0 ? 'rating-down' : '' }}  "></i>
                </div>
				<div class="flex-fill d-flex flex-column mb-20">

					<div>
						<div class="mb-20 question-content  pb-20">
							<h2 class="mb-20">{{question.title}}
							</h2>
							<p>
								{{question.content }}
							</p>
						</div>
						<div class="d-flex flex-row justify-content-between">
							<div class="d-flex flex-row align-items-center ">
                             <img class="mr-10 question-avatar avatar" src="https://randomuser.me/api/portraits/men/60.jpg" alt="image de l'auteur" />
                             <small>Demandé par <span class="clickable "> Daouda CAMARA </span></small>
                            </div>
							{# <div class="d-flex flex-row align-items-center ">
                             <img class="mr-10 question-avatar avatar" src="{{question.author.avatar}}" alt="image de l'auteur" />
                             <small>Demandé par <span class="clickable "> {{question.author.name }} </span></small>
                            </div> #}
                            <div class="d-flex flex-row align-items-center">
                            <i class="fa-sharp fa-regular fa-comment mr-10"></i>
                            <p> {{ question.nbrOfResponse }} </p>
                            </div>
						</div>
					</div>
				</div>
			</a>
		{% endfor %}
	</ul>
{% endblock %}