{% extends 'base.html.twig' %}

{% block title %}Conexion
{% endblock %}

{% block body %}
	<div class="block ">

		<h2 class="pb-30">
			Connexion
		</h2>
		<form action="{{ path("login")}}" method="post">
			<div class="form_row">
				<label for="email">Email</label>
				<input type="email" name="_username" autofocus id="email" value="{{username}}" placeholder="mon.email@email.com">
			</div>
			<div class="form_row">
				<label for="password" >Mot de passe
				</label>
				<input type="password" name="_password" id="password" placeholder="monpassword12545">
			</div>
			<div class="form-row">
				<label for="remember_me">Se souvenir de moi
				</label>
				<input type="checkbox" name="_remember_me" id="remember_me">
			</div>
			<input type="hidden" name="_csrf_token" value=" {{ csrf_token('authenticate') }} ">
			{% if error %}
				<ul class="form-errors pb-20">
					<li>
						{{ error.messageKey | trans(error.messageData, 'security') }}
					</li>
				</ul>
			{% endif %}


			<button class="btn btn-primary mt-5">Se connecter
			</button>

		</form>

	</div>
{% endblock %}
