{% extends "base.html.twig" %}

{% block styleSheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/question_show.css') }}">
{% endblock %}

{% block title %}
	{{ question.title }}
{% endblock %}

{% block body %}
	<div class="block">
		<div class="d-flex flex-row-nowrap">
			<div class="d-flex flex-column">
				<div class="d-flex flex-row-nowrap align-items-center pb-30 pb-10">
					<h3 class="mr-10">{{ question.title }}</h3>
					<div class="question-tag">QUESTION</div>
					<img class="avatar ml-auto" src="https://randomuser.me/api/portraits/men/52.jpg">
				</div>
				<p class="question-text">{{ question.content }}</p>
				<div class="separator"></div>
				{# affiche commentaire  #}

				{% for comment in question.comments %}
					<div class="question-response-elem mb-20">
						<div class="d-flex flex-row-nowrap align-items-center ">
							<img class="avatar mr-10" src="https://randomuser.me/api/portraits/men/50.jpg">
							<p class="clickable">David
							</p>
							<small class="ml-auto small-s"> 12/12/12
							</small>
						</div>

						<p class="question-response-text">
							{{comment.content }}
						</p>

					</div>
        <div class="separator-response"></div>
				{% endfor %}
				<h3 class="pb-20 mb-10">Ajouter une r√©ponse 
				<div class="comment-form">
					{{ form_start(form) }}
					{{ form_rest(form) }}

					<button class="btn btn-primary mt-5">Soumettre
					</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
